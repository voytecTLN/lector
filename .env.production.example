# Laravel Configuration - PRODUCTION
APP_NAME="Platforma Lektor√≥w"
APP_ENV=production
APP_KEY=base64:your-generated-key-here
APP_DEBUG=false
APP_URL=https://your-domain.com

# Logging
LOG_CHANNEL=daily
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error

# Database
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=platforma_lektorow
DB_USERNAME=platforma_user
DB_PASSWORD=your_secure_database_password

# Cache & Sessions
BROADCAST_DRIVER=log
CACHE_DRIVER=redis
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=your-domain.com
SESSION_SECURE_COOKIES=true

# Redis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=your-smtp-host.com
MAIL_PORT=587
MAIL_USERNAME=your-email@your-domain.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@your-domain.com
MAIL_FROM_NAME="${APP_NAME}"

# Security
SANCTUM_STATEFUL_DOMAINS=your-domain.com
SESSION_SECURE_COOKIES=true
SECURE_SSL_REDIRECT=true

# File Storage
FILESYSTEM_DISK=local
MAX_FILE_SIZE=10240

# Daily.co Integration (Video Meetings)
DAILY_API_KEY=your-daily-api-key
DAILY_DOMAIN=your-daily-domain

# ClamAV (Antivirus)
CLAMAV_ENABLED=true
CLAMAV_SOCKET_PATH=/var/run/clamav/clamd.ctl

# Performance
OPCACHE_ENABLE=1
QUEUE_WORKERS=2

# Monitoring
TELESCOPE_ENABLED=false
DEBUGBAR_ENABLED=false