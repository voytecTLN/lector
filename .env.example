APP_NAME="Platforma Lektorów"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

LOG_CHANNEL=stack
LOG_LEVEL=debug

# Database
DB_CONNECTION=mysql
DB_HOST=database
DB_PORT=3306
DB_DATABASE=tutoring_platform
DB_USERNAME=tutoring_user
DB_PASSWORD=

# IMPORTANT: Tests will automatically use tutoring_platform_testing database
# This is configured in phpunit.xml to prevent accidental data loss

# Cache & Sessions
CACHE_DRIVER=redis
FILESYSTEM_DRIVER=local
# SESSION_DRIVER=file

# Redis (for sessions and cache)
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379

# Session configuration
SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_DOMAIN=localhost

# Mail (MailHog for development)
# MAIL_MAILER=smtp
MAIL_MAILER=log
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@platforma-lektorow.local"
MAIL_FROM_NAME="${APP_NAME}"

# Support Email Configuration
SUPPORT_EMAIL_TECHNICAL=support-tech@platforma-lektorow.local
SUPPORT_EMAIL_LESSONS=support-lessons@platforma-lektorow.local
SUPPORT_EMAIL_BUSINESS=support-biz@platforma-lektorow.local

# File Storage
FILESYSTEM_DISK=local

# Broadcasting
BROADCAST_DRIVER=log

# Queue
QUEUE_CONNECTION=sync

# Tutoring Platform Specific
JITSI_DOMAIN=meet.jit.si
SMS_API_TOKEN=
SMS_SENDER="Platforma"

# Daily.co Configuration
DAILY_API_KEY=
DAILY_DOMAIN=
DAILY_ENABLE_PREJOIN=true
DAILY_ENABLE_RECORDING=false
DAILY_MAX_PARTICIPANTS=2
DAILY_MEETING_DURATION=120        # Czas trwania spotkania w minutach
DAILY_ENABLE_CHAT=true
DAILY_ENABLE_SCREEN_SHARE=true
DAILY_ENABLE_KNOCKING=false       # Czy wymagać akceptacji przed wejściem
DAILY_START_VIDEO_OFF=false       # Czy kamera ma być wyłączona na starcie
DAILY_START_AUDIO_OFF=false       # Czy mikrofon ma być wyłączony na starcie

# Mail notifications
MAIL_FROM_ADDRESS=noreply@platforma-lektorow.local

# File uploads
MAX_UPLOAD_SIZE=10240
ALLOWED_EXTENSIONS=pdf,jpg,png

# Sanctum configuration
SANCTUM_STATEFUL_DOMAINS=localhost,localhost:8000,localhost:5173,127.0.0.1

# Password reset settings
PASSWORD_RESET_EXPIRE=60
PASSWORD_RESET_THROTTLE=60

# Rate limiting
THROTTLE_LOGIN_ATTEMPTS=5
THROTTLE_PASSWORD_RESET_ATTEMPTS=3

# Security settings
BCRYPT_ROUNDS=12

# Frontend
VITE_APP_NAME="${APP_NAME}"
VITE_APP_URL="${APP_URL}"
VITE_APP_ENV=local
VITE_APP_DEBUG=true

# Frontend Features
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_HOTJAR=false
VITE_ENABLE_CHAT=false

# API Configuration
VITE_API_TIMEOUT=30000
VITE_MAX_FILE_SIZE=10485760

# Social Login (future)
VITE_GOOGLE_CLIENT_ID=
VITE_FACEBOOK_APP_ID=

# External Services
VITE_STRIPE_PUBLIC_KEY=
VITE_RECAPTCHA_SITE_KEY=

# Email Verification Settings
VERIFICATION_TOKEN_LIFETIME=24
VERIFICATION_RESEND_THROTTLE=60
VERIFICATION_MAX_ATTEMPTS=2

# File upload antivirus
CLAMAV_ENABLED=true
CLAMAV_SOCKET_PATH=/var/run/clamav/clamd.ctl

# External API Keys (comma-separated list)
# Generate with: php artisan tinker --execute="echo bin2hex(random_bytes(32));"
EXTERNAL_API_KEYS=